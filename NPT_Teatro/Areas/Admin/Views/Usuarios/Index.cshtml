@using NPT_Teatro.Utilidades
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.IsInRole(CNT.Admin))
{

    <br />
    <br />

    <div class="border">
        <div class="row">
            <div class="col-6">
                <h2 class="text-light ml-3 mt-3">Lista de usuarios</h2>
            </div>
            <div class="col-6">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info mt-4">
                    <i class="fas fa-plus"></i>&nbsp; Registrar un nuevo  usuario
                </a>
            </div>
        </div>

        <br />
        @if (Model.Count() > 0)
        {
            <table class="table border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>Acciones</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-light">
                            @Html.DisplayFor(m => item.Nombre)
                        </td>
                        <td class="text-light">
                            @Html.DisplayFor(m => item.Email)
                        </td>

                        <td class="text-light">

                            <i class="fas fa-trash-alt"></i>

                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No existen usuarios</p>
        }

    </div>

}

<p class="text-center" style="font-size: 50px;">Acceso no autorizado</p>